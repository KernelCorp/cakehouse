#slider
  #slider-order
    #make-order
      Оставьте заявку
    #order-form-block
      = form_for CakeOrder.new, remote: true, html: {class: 'inputs', id: 'slider_cake_order'}, remote: true do |f|
        = f.fields_for :customer do |customer|
          .input-wrap
            = customer.text_field :name, type: 'text', placeholder: 'Ваше имя'
          .input-wrap
            = customer.text_field :phone, type: 'text', placeholder: 'Ваш телефон'
          .input-wrap
            = customer.text_field :email, type: 'text', placeholder: 'Ваш e-mail'
          .message-wrap{style: 'display: none', id: 'slider-order-error'}
            %p
              Введите, пожалуйста, корректный email
        .button-wrap
          = f.submit class: 'submit_button', value: 'Заказать торт'
